{
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": "./",
    "outDir": "./dist/tmp",
    "declarationDir": "./dist/types",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "lib": ["es2021", "dom"]
  },
  "exclude": ["./dist"]
}
